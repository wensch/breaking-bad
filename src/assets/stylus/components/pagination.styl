.pagination
	align-items center
	display flex
	justify-content center
	margin-bottom 100px
	margin-top 20px
	width 100%

	&-item
		margin-right 20px
		
		&:last-child
			margin-right 0
	
	&-button
		background-color transparent
		border 0
		color #fff
		cursor pointer
		outline none
		transition-duration .3s
		transition-property color, background-color
		align-items center
		border 1px solid #fff
		border-radius 50%
		cursor pointer
		display flex
		height 40px
		justify-content center
		width 40px
		transition .3s background-color

		&.active
			background-color #003303
		
		&:hover
			background-color #fff
			color #000
		
		&:disabled
			background-color #969696
			cursor default
			points-events none

			&:hover
				color #fff