.search
  max-width 1200px
  margin 0 auto 
  margin-top 20px
  position relative

  &-field
    background-color transparent
    border 0
    border-bottom 1px solid #ccc
    box-sizing border-box
    color #fff
    outline 0
    padding 10px
    width 100%
    font-size 20px
    transition-property background-color
    transition-duration .3s

    &:focus
      background-color #0000007a
  
  &-btn
    align-item center
    background-color transparent
    border 0
    color #fff
    display flex
    position absolute
    right 0
    top 10px